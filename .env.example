# Optional local binary paths (recommended for project-local setup)
FFMPEG_BINARY=tools\\ffmpeg\\ffmpeg-8.0.1-essentials_build\\bin\\ffmpeg.exe
FFPROBE_BINARY=tools\\ffmpeg\\ffmpeg-8.0.1-essentials_build\\bin\\ffprobe.exe
ESPEAK_DATA_PATH=tools\\espeak\\runtime\\eSpeak NG\\espeak-ng-data
PHONEMIZER_ESPEAK_LIBRARY=tools\\espeak\\runtime\\eSpeak NG\\libespeak-ng.dll

# Runtime settings
KOKORO_REPO_ID=hexgrad/Kokoro-82M
OUTPUT_DIR=outputs
MAX_CHUNK_CHARS=500
HISTORY_LIMIT=5
NORMALIZE_TIMES=1
NORMALIZE_NUMBERS=1
DEFAULT_OUTPUT_FORMAT=wav
DEFAULT_CONCURRENCY_LIMIT=0
TTS_ONLY_MODE=0
LLM_ONLY_MODE=0
LOG_EVERY_N_SEGMENTS=10
LOG_LEVEL=INFO
FILE_LOG_LEVEL=DEBUG
LOG_DIR=logs

# Optional morphology DB (SQLite)
MORPH_DB_ENABLED=1
MORPH_DB_PATH=data\\morphology.sqlite3
MORPH_DB_TABLE_PREFIX=morph_
MORPH_LOCAL_EXPRESSIONS_ENABLED=0
PRONUNCIATION_RULES_PATH=data\\pronunciation_rules.json

# WordNet (local)
WORDNET_DATA_DIR=data\\nltk_data
WORDNET_AUTO_DOWNLOAD=1
SPACY_EN_MODEL_AUTO_DOWNLOAD=1

# Optional LM Studio (OpenAI-compatible API) for lesson text generation
# Set *_TIMEOUT_SECONDS=0 to disable timeout and wait indefinitely.
LM_STUDIO_BASE_URL=http://127.0.0.1:1234/v1
LM_STUDIO_API_KEY=lm-studio
LM_STUDIO_MODEL=mistralai/ministral-3-14b-reasoning
LM_STUDIO_TIMEOUT_SECONDS=120
LM_STUDIO_TEMPERATURE=0.3
LM_STUDIO_MAX_TOKENS=16000

# Optional LM Studio verifier for morphology post-check
LM_VERIFY_ENABLED=0
LM_VERIFY_BASE_URL=http://127.0.0.1:1234/v1
LM_VERIFY_API_KEY=lm-studio
LM_VERIFY_MODEL=mistralai/ministral-3-14b-reasoning
LM_VERIFY_TIMEOUT_SECONDS=30
LM_VERIFY_TEMPERATURE=0.0
LM_VERIFY_MAX_TOKENS=2048
LM_VERIFY_MAX_RETRIES=2
LM_VERIFY_WORKERS=1
